{
  "compilerOptions": {
    "lib": ["ES2020", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2020",
    "outDir": "dist",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strictNullChecks": true
  },
  "include": [
    "hardhat.config.ts",
    "index.d.ts",
    "scripts/**/*.ts",
    "test/**/*.ts",
    "tasks/**/*.ts",
    "e2e/**/*.ts",
    "gre/**/*.ts",
    "sdk/**/*.ts"
  ],
  "typedocOptions": {
    "entryPoints": ["./sdk/src/index.ts"],
    "out": "docs"
  }
}
